<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/login_bg"
        android:layout_height="@dimen/dimen_240dp">

        <ImageView
            android:layout_width="@dimen/dimen_72dp"
            android:layout_height="@dimen/dimen_72dp"
            android:src="@drawable/login_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_73dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_49dp"
        android:paddingLeft="@dimen/dimen_48dp"
        android:paddingRight="@dimen/dimen_48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_18dp">

            <ImageView
                android:layout_width="@dimen/dimen_19dp"
                android:layout_height="@dimen/dimen_19dp"
                android:src="@drawable/login_user"/>

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_19dp"
                android:background="@color/gray_cc"
                android:layout_marginLeft="@dimen/dimen_17dp"/>

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_19dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textColorHint="@color/gray_cc"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_14"
                android:hint="请输入手机号"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_cc"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_18dp">

            <ImageView
                android:layout_width="@dimen/dimen_19dp"
                android:layout_height="@dimen/dimen_19dp"
                android:src="@drawable/login_pas"/>

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_19dp"
                android:background="@color/gray_cc"
                android:layout_marginLeft="@dimen/dimen_17dp"/>

            <EditText
                android:id="@+id/etUserPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_19dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textColorHint="@color/gray_cc"
                android:textColor="@color/gray_33"
                android:inputType="textPassword"
                android:textSize="@dimen/sp_14"
                android:hint="请输入密码"
                android:background="@null"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_cc"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_12dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_18dp">

            <ImageView
                android:layout_width="@dimen/dimen_19dp"
                android:layout_height="@dimen/dimen_19dp"
                android:src="@drawable/login_ver"/>

            <View
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_19dp"
                android:background="@color/gray_cc"
                android:layout_marginLeft="@dimen/dimen_17dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_19dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <EditText
                android:id="@+id/etCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_19dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textColorHint="@color/gray_cc"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:hint="请输入图形码"
                android:background="@null"/>

                <ImageView
                    android:id="@+id/ivAuthCode"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:scaleType="fitXY"/>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_cc"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有账号，去注册"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="#ffb3b3b3"
                    android:textSize="12sp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_marginLeft="@dimen/dimen_68dp"
        android:layout_marginRight="@dimen/dimen_68dp"
        android:layout_marginTop="@dimen/dimen_65dp"
        android:background="@drawable/bg_login"
        android:text="登录"
        android:textColor="#fffdfdfd"/>


</LinearLayout>