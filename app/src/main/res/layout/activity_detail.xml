<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_195dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_13dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:paddingTop="@dimen/dimen_38dp"
            android:gravity="center_horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_13"
                android:text="最高可贷"
                android:layout_marginBottom="@dimen/dimen_10dp"/>

            <TextView
                android:id="@+id/tvHight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:text="50000"/>


            <TextView
                android:id="@+id/tvTag"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_15dp"
                android:gravity="center"
                android:background="@drawable/bg_detail_tag"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:text="放款快"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5E5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_82dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/gray_33"
                        android:text="日利率"/>

                    <TextView
                        android:id="@+id/tvDaySwaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:text="0.05%"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:background="#E5E5E5"/>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/gray_33"
                        android:text="放款速度"/>

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:text="0.05%"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:background="#E5E5E5"/>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/gray_33"
                        android:text="贷款期限"/>

                    <TextView
                        android:id="@+id/tvTerm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:text="0.05%"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5E5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_13dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:src="@drawable/home_icon_img"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_33"
                    android:text="申请条件"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvTiaojian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_33dp"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/gray_33"
                android:text="@string/detail"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_21dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_13dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:src="@drawable/home_icon_img"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_33"
                    android:text="申请流程"/>

            </LinearLayout>


            <include layout="@layout/layout_auth"/>








        </LinearLayout>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvPublish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#609BED"
            android:gravity="center"
            android:layout_weight="0.32"
            android:text="推广"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>


        <TextView
            android:id="@+id/tvRegist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#56ADEF"
            android:gravity="center"
            android:layout_weight="0.68"
            android:text="立即申请"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>